@model COMP2007_S2016_Assignment2.Models.MenuItems

@{
    ViewBag.Title = "Details";
}
@*File: details.cshtml
    Authors: Amanda, Anthony
    Website: http://comp2007-s2016-assignment2-restaurant.azurewebsites.net
    Description: This page diplays the details of a selected menu item*@
<h2>Details</h2>

<div>

    @if (User.Identity.IsAuthenticated)
            {
        <p>
            @Html.ActionLink("Edit Item", "Edit", new { id = Model.ID }, new { @class = "pull-right edit" })
        </p>
    }
    <p>
        @Html.ActionLink("Back to List", "Index", new { @class = "back" })
    </p>
    <dl class="dl-horizontal">
        <dt>
            <p>Item:</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

        <dt>
            <p>Price:</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemPrice)
        </dd>

        <dt>
            <p>Description:</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LongDesc)

        </dd>

        <dt>

        </dt>

        <dd>
            <img class="food-pic" src="@Html.DisplayFor(model => model.FullsizeURL)" />
        </dd>

    </dl>
</div>

